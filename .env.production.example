# Production Environment Variables for docker-compose.production.yml
# Copy this file to .env and update with your values

# Application
APP_NAME=kompaniya
TZ=UTC

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=app_db

# Next.js URLs
# Update these with your actual domain in production
NEXT_PUBLIC_BASE_SERVER_URL=https://your-domain.com
NEXT_PUBLIC_BASE_CLIENT_URL=https://your-domain.com

# AWS (for SES emails)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_SES_CONFIGURATION_SET=your_config_set

# Better Auth (add your auth configuration)
# BETTER_AUTH_SECRET=your_secret_key
# BETTER_AUTH_URL=https://your-domain.com/api/auth
